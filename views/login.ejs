<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <div class="page-container">

      <!-- Top navigation bar -->
      <div class="top-bar">
        <div class="brand">Clinic Booking</div>
        <nav class="top-nav">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/register">Register</a>
        </nav>
      </div>

      <!-- Login card -->
      <div class="card small-card">

        <!-- Page header -->
        <header class="card-header">
          <h1>Login</h1>

          <!-- Optional message (e.g. "Please log in to continue") -->
          <% if (message) { %>
            <p class="card-subtitle"><%= message %></p>
          <% } %>
        </header>

        <!-- Login form -->
        <form action="/login" method="POST">

          <!-- Error message if login fails -->
          <% if (error) { %>
            <p class="message error"><%= error %></p>
          <% } %>

          <!-- Email or username field -->
          <div class="form-group">
            <label>Email / Username (for admin)</label>
            <input name="email" required>
          </div>

          <!-- Password field -->
          <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" required>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn primary full-btn">Login</button>

          <!-- Link to registration page -->
          <p class="muted-text" style="margin-top: 1rem;">
            Don't have an account?
            <a href="/register">Register</a>
          </p>

        </form>
      </div>
    </div>
  </body>
</html>
